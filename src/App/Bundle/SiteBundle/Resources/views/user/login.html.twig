{% extends layout %}

{% block content %}
    {% block login_content %}
        {% if error %}
            <div class="alert alert-danger">{{ error.message|trans }}</div>
        {% endif %}
        <div class="container">
            <div class="col-md-4 col-md-offset-4">
                <h1 id="login-img">
                    <img src="/bundles/appsite/images/logo-follow.png" />
                </h1>
                <form action="{{ path( 'login_check' ) }}" method="post" role="form" id="login">
                    {% block login_fields %}
                    <div class="form-group">
                        <input type="text" id="username" class="inputmov login form-control" name="_username" value="{{ last_username }}" required="required" autofocus="autofocus" autocomplete="on" placeholder="{{ 'Login'|trans }}" />
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" class="inputmov form-control password" name="_password" required="required" placeholder="{{ 'Password'|trans }}" />
                    </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}" />
                    <button type="submit" class="btn btn-login">{{ 'Login'|trans }}</button>
                    {% endblock %}
                </form>
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block footer %}
{% endblock %}
