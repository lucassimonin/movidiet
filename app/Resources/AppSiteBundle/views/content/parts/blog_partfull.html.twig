<section id="blog" class="{{ bgcolor }}">
    <div class="container">
        <h2 class="green text-center text-uppercase blog">- {{ title|trans }} -</h2>
        {% for article in articles %}
            <div class="col-sm-3 wow fadeInUp article-item">
                <div class="article-image">
                    {{ ez_render_field(article, 'image', {
                        parameters: {
                            alias: 'article_image'
                        }
                    }) }}
                </div>
                <div class="article-content">
                    <h4>{{ ez_render_field(article, 'title') }}</h4>
                    {{ ez_render_field(article, 'short_description') }}
                    <div class="text-center bnt-container bnt-container-article">
                        <a href="{{ path( "ez_urlalias", {"contentId": article.contentInfo.id} ) }}" class="article-btn">{{ 'app.blog.btn.article'|trans }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>