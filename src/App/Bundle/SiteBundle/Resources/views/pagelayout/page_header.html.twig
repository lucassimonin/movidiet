<h1 class="hide">{{ 'app.global.title'|trans }}</h1>
<header style="background-image:url('{{ ez_field_value(content, 'image_top').uri }}');">
    <div class="header-content wow fadeInUp">
        <div class="header-content-inner">
            {{ ez_render_field(content, 'logo') }}
            {{ ez_render_field(content, 'subtitle') }}
        </div>
    </div>
    <div class="container text-center">
        <div class="row">
            <div class="col-xs-offset-4 col-xs-4">
                <a class="page-scroll" href="#homepage">
                    <div class="mouse-icon">
                        <div class="wheel"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</header>
<div class="clearfix"></div>