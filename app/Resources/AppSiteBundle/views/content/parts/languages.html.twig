{% for lang in ezpublish.availableLanguages %}
    {% if lang != currentLanguage %}
        {% do routeRef.set( "siteaccess", ezpublish.translationSiteAccess( lang ) ) %}
        <li class="padding-navbar">
            <a href="{{ url( routeRef ) }}"><span class="flag-icon flag-icon-{{ lang|lower|split('-')[1] }}"></span></a>
        </li>
    {% endif %}
{% endfor %}
